.item-container {
    position: relative;
    background: #f5f5f5;
    .back-img{
      display: block; 
      background-color: black;
    }
    .desc {
      height: 80px;
      margin-top: 0;
      display:  flex;
      flex-direction: row;
      justify-content: space-between;
      background: #fff;
      .faceName{
        display: flex;
        flex-direction: row;
        align-items: center;
        margin-left: 10px;
        .myface {
          display: block;
          width: 60px;
          height: 60px;
          margin-right: 20px;
          border-radius: 30px;
      }
      .nickname {
        font-size: 14Px;
        margin-right: 20px;
        color: darkgray;
      }
    } 
    .comment {
      display:  flex;
      flex-direction: row;
      justify-content: space-between;
      align-items: center;
      .icon {
        display: block;
        width: 60px;
        height: 60px;
        margin-right: 14px;
        border-radius: 30px;
      }
      .commentCount {
        font-size: 14Px;
        margin-right: 20px;
        color: darkgray;
      }
    }
  }
}



