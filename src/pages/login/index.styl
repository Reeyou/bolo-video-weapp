.banner
  width: 100%
  height: 100vh
  Image 
    width: 100%
    height: 100%
    vertical-align: top
    position: relative
    z-index: -999
    &:after
      content: ''
      position: absolute
      top: 0
      left: 0
      width: 100%
      height: 100%
      background: rgba(255,255,255,0.18)
  .img
    &:after
      content: ''
      position: absolute
      top: 0
      left: 0
      width: 100%
      height: 100%
      // background: rgba(0,0,0,0.38)
.container 
  width: 100%
  height: 100%
  .tips
    position: absolute
    top: 50%
    left: 0
    width: 100%
    margin-top: -47Px
    text-align: center
    color: rgba(255,255,255,0.98)
    font-size: 48Px
    // display: inline
    Text
      display: block
    .subTip
      font-size: 24Px
  .btn 
    width: 100%
    position: absolute
    bottom: 60px
    &_con
      width: 90%
      margin: 0 auto
      text-align: center
      Button
        padding: 0px 120px;
        font-size: 16Px;
      .login 
        background: rgba(42,175,266,0.74);
        color: #fff;
        margin-right: 20px;
        display: inline-block;
      .register 
        background: rgba(255,255,255,0.48)
        color: #fff
        display: inline-block
  .con
    position: absolute
    width: 100%;
    top: 50%
    left: 0
.registerForm,
.loginForm
  width: 60%;
  margin: 0 auto
  font-size: 14Px
  .form
    width: 100%;
    .formItem
      width: 100%;
      Text
        font-size: 20Px
      .label, input
        display: inline-block
      .label
        text-align: right
        font-size: 16Px
        width: 180px
      .input
        box-sizing: border-box;
        width: 100%;
        height: 74px;
        text-align: left
        padding: 4px 0 4px 40px;
        border-radius: 20px
        background: #fff
        // color: #fff
        &:placeholder
          font-size: 14Px
          color: #fff
          
    .login,
    .register 
      width: 100%
      background:rgba(42,175,266,0.74);
      margin-top: 40px
      padding-right: 20px
    .item
      margin-top: 40px
    .tips
      float: right
      font-size: 26px
      margin-top: 20px
      Text
        color: #fff
        margin-left: 14px
        font-size: 26px
